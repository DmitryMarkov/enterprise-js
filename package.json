{
  "name": "enterprise",
  "version": "0.1.0",
  "description": "Sample enterprise full-stack project",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && babel src -d dist --copy-files",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "ndb": "ndb",
    "prettier": "prettier --write src",
    "serve": "yarn run build && dotenv node dist/index.js",
    "start": "yarn run watch",
    "test": "yarn run test:unit && yarn run test:integration && yarn run test:e2e",
    "test:coverage": "nyc --reporter=html --reporter=text yarn run test",
    "test:integration:coverage": "nyc --reporter=html --reporter=text yarn run test:integration",
    "test:e2e:coverage": "nyc --reporter=html --reporter=text yarn run test:e2e",
    "test:e2e": "./scripts/e2e.test.sh",
    "test:integration": "dotenv -e envs/test.env -e envs/.env mocha -- 'src/**/*.integration.test.js' --require @babel/register",
    "test:serve": "dotenv -e envs/test.env -e envs/.env babel-node src/index.js",
    "test:unit": "export NODE_ENV=test; mocha 'src/**/*.unit.test.js' --require @babel/register",
    "test:unit:coverage": "nyc --reporter=html --reporter=text yarn run test:unit",
    "upgrade-dependencies": "yarn upgrade-interactive --latest --exact",
    "watch": "nodemon -w src --exec yarn run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DmitryMarkov/enterprise-js.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DmitryMarkov/enterprise-js/issues"
  },
  "homepage": "https://github.com/DmitryMarkov/enterprise-js#readme",
  "resolutions": {
    "lodash": ">=4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "7.6.0",
    "@babel/core": "7.6.0",
    "@babel/node": "7.6.1",
    "@babel/plugin-syntax-optional-chaining": "7.2.0",
    "@babel/preset-env": "7.6.0",
    "@babel/register": "7.6.0",
    "cross-env": "5.2.1",
    "cucumber": "5.1.0",
    "dotenv": "8.1.0",
    "dotenv-cli": "2.0.1",
    "eslint": "6.3.0",
    "eslint-config-prettier": "6.2.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.0.5",
    "lodash.clonedeep": "4.5.0",
    "lodash.isequal": "4.5.0",
    "mocha": "6.2.0",
    "ndb": "1.1.4",
    "nodemon": "1.19.2",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "sinon": "7.4.2",
    "superagent": "5.1.0"
  },
  "dependencies": {
    "@babel/polyfill": "7.6.0",
    "ajv": "6.10.2",
    "body-parser": "1.19.0",
    "elasticsearch": "16.3.0",
    "express": "4.17.1"
  }
}
